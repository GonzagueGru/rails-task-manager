<div class="container form-group">
<form action="/tasks/<%= @task.id %>" method="post">
  <input name="_method" type="hidden" value="patch" />
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <label for="title">Title: </label>
  <input type="text" name="task[title]" id="title" class="form-control" value= "<%= @task[:title] %>">

  <label for="details">Details: </label>
  <input type="text" name="task[details]" id="details" class="form-control" value="<%= @task[:details] %>">
    <br>
  <input type="submit" class="btn btn-primary">
    <br>
    <br>
  <div class="form-check">
    <input type="hidden" name="task[completed]" value="false">
    <%= check_box_tag 'task[completed]', '1', @task.completed %>
    <label class="form-check-label" for="exampleCheck1">Complete</label>
  </div>
</form>
<hr>
<br>
<a href="/tasks" class="link"> <br><br>Back to list</a>
</div>

